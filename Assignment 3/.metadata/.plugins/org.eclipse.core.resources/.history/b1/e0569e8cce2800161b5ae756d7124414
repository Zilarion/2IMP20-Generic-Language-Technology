grammar nl.tue.glt.xtext.Platoon with org.eclipse.xtext.common.Terminals

import "platoon" 
import "http://www.eclipse.org/emf/2002/Ecore" as ecore

World:
	platoon=Platoon
	route=Route	
	'constraints' constraint+=[Constraint] (constraint+=[Constraint])*
	;

Command returns Command:
	ForwardCommand | TurnCommand;

Constraint returns Constraint:
	HeadwayConstraint;

Vehicle:
	FollowVehicle | LeadingVehicle;

Platoon:
	'platoon'
	LV=LeadingVehicle
	(FV+=FollowVehicle)?
	;

Route:
	'route'	id=EString
	commands+=[Command|EString] (commands+=[Command|EString])* 
	;
	
LeadingVehicle:
	'LV' id=EString 'route' route=[Route|EString]
	;

FollowVehicle:
	'FV' id=EString 'front' 'runner' follows=[Vehicle|EString]
	;

EString returns ecore::EString:
	STRING | ID;

ForwardCommand:
	'forward' '(' distance=INT ')'
	;

TurnCommand:
	'turn'
	direction=Direction
	;

Direction:
	'Left'|'Right'
	;

HeadwayConstraint returns HeadwayConstraint:
	min=INT '<=' 'headway' '<=' max=INT
	;
	
