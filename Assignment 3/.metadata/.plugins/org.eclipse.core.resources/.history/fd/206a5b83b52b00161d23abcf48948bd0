grammar nl.tue.glt.xtext.Platoon with org.eclipse.xtext.common.Terminals

import "platoon" 
import "http://www.eclipse.org/emf/2002/Ecore" as ecore

World returns World:
	platoon=Platoon
	route=Route
	constraints=Constraints
	;

Command returns Command:
	ForwardCommand | TurnCommand;

Constraint returns Constraint:
	HeadwayConstraint;

Vehicle returns Vehicle:
	FollowVehicle | LeadingVehicle;

Platoon returns Platoon:
	{Platoon}
	'platoon'
	LV=LeadingVehicle
	(FV+=FollowVehicle)?
	;

Route returns Route:
	{Route}
	'route'	id=EString
	commands+=Command (commands+=Command)* 
	;

Constraints returns Constraints:
	'constraints'
	constraints+=Constraint (constraints+=Constraint)*
	;
	
LeadingVehicle:
	{LeadingVehicle}
	'LV' id=EString 'route' route=[Route|EString]
	;

FollowVehicle:
	{FollowVehicle}
	'FV' id=EString 'front' 'runner' follows=[Vehicle|EString]
	;

EString returns ecore::EString:
	STRING | ID;

ForwardCommand:
	{ForwardCommand}
	'forward' '(' distance=INT ')'
	;

TurnCommand:
	{TurnCommand}
	'turn'
	direction=Direction
	;

Direction:
	'Left'|'Right'
	;

HeadwayConstraint:
	{HeadwayConstraint}
	min=INT '<=' 'headway' '<=' max=INT
	;
	
